<% if queue.to_a.pluck(:id).include? @movie['id'] %>
  <%= link_to 'In Queue!', remove_movie_path(movie_id: @movie['id'], tmdb_id: @movie['tmdb_id']), id: "remove-from-queue-button", method: :post, remote: true, class: "btn btn-sm btn-primary" %>
<% else %>
  <%= link_to 'Not in Queue', queue_path(movie_id: @movie['id'], tmdb_id: @movie['tmdb_id']), id: "add-to-queue-button", method: :post, remote: true, class: "btn btn-sm btn-primary" %>
<% end %>
