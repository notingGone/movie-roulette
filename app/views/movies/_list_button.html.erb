<% if list.movies.to_a.pluck(:tmdb_id).include? movie['tmdb_id'] %>
  <%= link_to 'Remove from List', remove_movie_path(movie_id: movie['id'], tmdb_id: movie['tmdb_id']), id: "remove-from-list-button", method: :post, remote: true, class: "btn btn-sm btn-primary" %>
<% else %>
  <%= link_to 'Add to List', add_path(tmdb_id: movie['tmdb_id']), id: "add-to-list-button", method: :post, remote: true, class: "btn btn-sm btn-primary" %>
<% end %>
