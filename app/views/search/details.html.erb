<div class="container">
  <div class="row">
    <div class="col-sm word-wrap">
      <% if !@movie.poster_path.nil? %>
        <%= image_tag small_movie_poster_url(@movie) %>
      <% end %>
      <h2><%= @movie.title %></h2>
      <% if @not_saved %>
      <%# debugger %>
        <%= link_to "Add to DB", save_path(id: @movie.id), class: "btn btn-success" %>
      <% else %>
        <span class="badge">In database</span>
      <% end %>
      <div class="list-group"><p>
        <% @movie.each_pair do |key, value| %>
          <p>
            <strong><%= key %>: </strong>
            <%= value %>
          </p>
        <% end %>
      </p></div>
    </div>
  </div>
</div>
